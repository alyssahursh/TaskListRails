<h1>Task List</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to(task[:title], show_path(task[:id])) %>: <%= task[:description] %>
      <% if task[:completed_at] == nil %>
        <%= "Task Not Complete" %>
      <% else %>
        <%= "Task completed at #{task[:completed_at]}" %>
      <% end %>
    </li>
  <% end %>
</ul>
