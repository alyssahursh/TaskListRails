<h1>Edit a task</h1>

<section class="form">

  <%= form_for @current_task, url: {action: 'update'}, method: :patch do |f| %>
    <%= f.label :title %>:
    <%= f.text_field :title %>

    <%= f.label :description %>:
    <%= f.text_field :description %>

    <%= f.submit %>
  <% end %>

</section>
